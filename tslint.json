{
    "extends": "tslint:recommended",
    "rules": {
        "ordered-imports": false,
        "forin": false,
        "no-console": false,
        "no-unused-expression": true,
        "no-sparse-arrays": true,
        "triple-equals": false,
        "no-consecutive-blank-lines": [true,2],
        "no-unused-variable": false,
        "prefer-const": false,
        "no-bitwise": true,
        "prefer-for-of": false,
        "max-line-length": [
            true,
            180
        ],
        "radix": false,
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "object-literal-sort-keys": false,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type",
            "check-typecast",
            "check-preblock"
        ],
        "max-classes-per-file": [
            true,
            2
        ],
        "curly": true,
        "no-var-requires": true,
        "interface-name": true
    },
    "jsRules": {
        "no-bitwise": true,
        "max-line-length": [
            true,
            180
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ],
        "object-literal-sort-keys": false,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type",
            "check-typecast",
            "check-preblock"
        ],
        "max-classes-per-file": [
            true,
            10
        ],
        "indent": [
            true,
            "spaces"
        ],
        "curly": true,
        "no-var-requires": false,
        "interface-name": false
    },
    "rulesDirectory": []
}
